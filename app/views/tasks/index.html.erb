<h1>Tasks</h1>

<% @tasks.each do |task| %>
  <div class="task">
    <% if task.completed == true %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <p><%= link_to task.title, task_path(task) %></p>
    <p><%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>

  </div>
<% end %>
