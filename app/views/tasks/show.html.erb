<h1><%= @task.title %></h3>

<p><%= @task.details %></p>

<% if @task.completed == true %>
  <i class="far fa-check-square"></i>
  <p>This task is completed</p>
<% else %>
  <i class="far fa-square"></i>
  <p>This task is not completed yet</p>
<% end %>

<p><%= link_to "Edit #{@task.title}?", edit_task_path(@task)%></p>

<p><%= link_to "Back to tasks", tasks_path %></p>
